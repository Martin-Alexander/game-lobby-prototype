/*
  if (host)
    ask server if gamedata needs to be initialized
    if (game data has not been initialized)
      initialize it
      send it to server for other players
    else
      ask server for gamedata
      assume that other player alread have it
    end
  else
    ask server if gamedata exists
    if (gamedata exists)
      initialize gamedata
    else
      just wait to for it to be sent by the host
    end
  end
*/

const gameData = new GameData();

const players = [];
<% @game.players.each_with_index do |player, i| %>
  players.push({
    number: "<%= i %>",
    type: "<%= player.role %>"
  });
<% end %>

const settings = {
  numberOfPlayers: "<%= @game.active_players.count %>",
  players: players
};

<% if @game.host == current_user && @game.data == "" %>
  gameData.initializeByGenerationFromSettings(settings);
  sendGameDataToServer(gameData);
<% elsif @game.data != "" %>
  gameData.initializeFromGameDataJSON(JSON.parse("<%= @game.data %>"));
<% end %>

