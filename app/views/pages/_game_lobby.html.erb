<%= link_to "Leave Game", leave_game_path, method: :post, remote: true %>

<h1>Staging</h1>

<div id="players">
  <% current_user.game_lobby_in.players.each do |player| %>
    <% if player.host %>
      <div><%= player.username %> (Host)</div>
    <% else %>
      <div><%= player.username %></div>
    <% end %>
  <% end %>
</div>